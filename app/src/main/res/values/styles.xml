<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground"> @color/activityBackground </item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">#C5CAE9</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#212121</item>
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#C5CAE9</item>
        <item name="colorOnSecondary">#212121</item>
        <item name="colorAccent">#FFC107</item>
        <item name="android:colorBackground">#212121</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:windowBackground"> @color/activityBackground </item>

        <item name="colorError">@color/colorError</item>

        <item name="fontFamily">@font/lato</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
    </style>

    <style name="cardView_dashBoard">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="textView_adminBoard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhile</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
